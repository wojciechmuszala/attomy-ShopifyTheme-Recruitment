<button class="faq__group-toggle custom-card custom-card--tight" data-action="toggle">
  <div class="faq__group-data">
    {% if block.settings['show-image'] == true %}
      {%- if block.settings.image != blank -%}
        {%- assign widths = '60,85' -%}
        {%- capture sizes -%}
            (min-width: 490px) 85px, 60px
        {%- endcapture -%}

        {{
          block.settings.image
          | image_url: width: 85
          | image_tag: loading: 'lazy', sizes: sizes, widths: widths, class: 'faq__group-data-image'
        }}
      {%- else -%}
        {{ 'image' | placeholder_svg_tag: 'placeholder-svg faq__group-data-image' }}
      {%- endif -%}
    {%- endif -%}
    <span class="faq__group-data-name">
      {{ block.settings.name }}
    </span>
  </div>
</button>
<div class=" faq__list-wrapper collapse-content-container">
  <ul class="faq__list collapse-content collapse-close-rest" {{ block.shopify_attributes }}>
    {% content_for 'blocks' %}
  </ul>
</div>

{% schema %}
{
  "name": "Question",
  "class": "faq__group-item custom-collapse",
  "settings": [
    {
      "type": "text",
      "label": "List parent name",
      "id": "name"
    },
    {
      "type": "checkbox",
      "id": "show-image",
      "label": "Show image",
      "default": true
    },
    {
      "type": "image_picker",
      "id": "image",
      "label": "Image"
    }
  ],
  "blocks": [
    {
      "type": "_faq-item"
    }
  ],
  "presets": [
    {
      "name": "Questions list"
    }
  ]
}
{% endschema %}
